{
  "name": "@lmaksym/agent-mem",
  "version": "0.1.1",
  "description": "Persistent, git-backed memory for AI coding agents.",
  "type": "module",
  "bin": {
    "agent-mem": "bin/agent-context.js",
    "amem": "bin/agent-context.js"
  },
  "scripts": {
    "start": "node bin/agent-context.js",
    "test": "node --test src/**/*.test.js",
    "format": "prettier --write 'src/**/*.js' 'bin/**/*.js'",
    "format:check": "prettier --check 'src/**/*.js' 'bin/**/*.js'",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": "prettier --write"
  },
  "keywords": [
    "ai",
    "agent",
    "context",
    "memory",
    "cli",
    "claude-code",
    "codex",
    "cursor",
    "coding-agent",
    "agent-skills"
  ],
  "author": "Maksym Lypivskyi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmaksym/agent-mem.git"
  },
  "homepage": "https://github.com/lmaksym/agent-mem",
  "bugs": {
    "url": "https://github.com/lmaksym/agent-mem/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "bin/",
    "src/",
    ".claude/commands/",
    ".claude/skills/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
